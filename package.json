    "build-storybook": "storybook build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:a11y": "jest --testPathPatterns=__tests__",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.10",
