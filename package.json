    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "autoprefixer": "^10.4.21",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.460.0",
    "next": "^14.2.18",
